<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="900.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.QuestionBoundry">
   <children>
      <TextField fx:id="questionTextTXT" layoutX="44.0" layoutY="266.0" onAction="#questionTextAction" prefHeight="26.0" prefWidth="471.0" promptText="Question text" />
      <Button fx:id="saveBtn" layoutX="105.0" layoutY="573.0" mnemonicParsing="false" onAction="#saveAction" stylesheets="@designs.css" text="SAVE" />
      <Button fx:id="backBtn" layoutX="364.0" layoutY="573.0" mnemonicParsing="false" onAction="#backAction" stylesheets="@designs.css" text="BACK" />
      <ComboBox fx:id="selectSubject" layoutX="90.0" layoutY="33.0" onAction="#selectSubjectAction" prefHeight="26.0" prefWidth="128.0" promptText="Select Subject" styleClass="ComboBox" stylesheets="@designs.css" />
      <VBox layoutX="48.0" layoutY="318.0" prefHeight="200.0" prefWidth="462.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <RadioButton fx:id="optionA" mnemonicParsing="false" onAction="#optionAAction" prefHeight="25.0" prefWidth="68.0" text="a.">
                     <toggleGroup>
                        <ToggleGroup fx:id="chooseAnswer" />
                     </toggleGroup>
                  </RadioButton>
                  <TextField fx:id="answerA" onAction="#answerAAction" prefHeight="28.0" prefWidth="431.0" promptText="answer A" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <RadioButton fx:id="optionB" mnemonicParsing="false" onAction="#optionBAction" prefHeight="18.0" prefWidth="51.0" text="b." toggleGroup="$chooseAnswer" />
                  <TextField fx:id="answerB" onAction="#answerBAction" prefHeight="26.0" prefWidth="413.0" promptText="answer B" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <RadioButton fx:id="optionC" mnemonicParsing="false" onAction="#optionCAction" prefHeight="18.0" prefWidth="51.0" text="c." toggleGroup="$chooseAnswer" />
                  <TextField fx:id="answerC" onAction="#answerCAction" prefHeight="26.0" prefWidth="414.0" promptText="answer C" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <RadioButton fx:id="optionD" mnemonicParsing="false" onAction="#optionDAction" prefHeight="18.0" prefWidth="55.0" text="d." toggleGroup="$chooseAnswer" />
                  <TextField fx:id="answerD" onAction="#answerDAction" prefHeight="26.0" prefWidth="409.0" promptText="answer D" />
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox layoutX="90.0" layoutY="89.0" prefHeight="132.0" prefWidth="128.0">
         <children>
            <Button fx:id="showCourseBtn" mnemonicParsing="false" onAction="#shoqCourseBtn" prefHeight="26.0" prefWidth="129.0" text="Show Courses" />
            <ListView fx:id="courseList" prefHeight="105.0" prefWidth="127.0" />
         </children>
      </VBox>
   </children>
</AnchorPane>
